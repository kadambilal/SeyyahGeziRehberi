<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/places_border"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerview_row_sehirResmi"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/drawer_bg"
       />

    <TextView

        android:id="@+id/recyclerview_row_sehirAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sehir adi"
        android:textSize="20dp"
        android:paddingRight="3dp"
        android:layout_toRightOf="@+id/recyclerview_row_sehirResmi"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
      />


</RelativeLayout>