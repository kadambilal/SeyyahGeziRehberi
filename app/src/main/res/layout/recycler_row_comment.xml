<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/detail_border"


    android:layout_marginTop="5dp"
    >



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerView_row_comment_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
       />

    <TextView
        android:textStyle="bold"
        android:id="@+id/recyclerView_row_comment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_toRightOf="@+id/recyclerView_row_comment_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:fontFamily="@font/poppins_medium"
        android:id="@+id/recyclerView_row_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="CommentText"
        android:layout_toRightOf="@+id/recyclerView_row_comment_image"
        android:layout_below="@+id/recyclerView_row_comment_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        />

</RelativeLayout>